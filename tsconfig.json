{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "pretty": true,
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
  },
  "formatCodeOptions": {
    "indentSize": 4,
    "tabSize": 4
  },
  "include": [
    "./src/**/*"
  ]
}
